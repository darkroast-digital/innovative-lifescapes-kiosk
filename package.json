{
  "name": "Static",
  "version": "0.0.1",
  "description": "A simple static site setup based on Gulp and Webpack",
  "scripts": {
    "dev": "gulp --require babel-register --gulpfile build",
    "scripts": "gulp --require babel-register --gulpfile build webpack --display-error-details",
    "build": "NODE_ENV=production gulp build --require babel-register --gulpfile build"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "babelrc": false
  },
  "dependencies": {
    "autoprefixer": "^7.1.6",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "browser-sync": "^2.18.13",
    "gulp": "^3.9.1",
    "gulp-postcss": "^7.0.0",
    "gulp-rename": "^1.2.2",
    "gulp-sass": "^3.1.0",
    "gulp-twig": "^1.1.1",
    "gulp-util": "^3.0.8",
    "jquery": "^3.2.1",
    "webpack": "^3.8.1",
    "webpack-stream": "^4.0.0",
    "yamljs": "^0.3.0"
  }
}
